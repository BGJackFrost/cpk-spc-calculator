{
  "name": "cpk-spc-e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for CPK/SPC Calculator System",
  "scripts": {
    "test": "npx playwright test --config=playwright.config.ts",
    "test:chromium": "npx playwright test --config=playwright.config.ts --project=chromium",
    "test:mobile": "npx playwright test --config=playwright.config.ts --project=mobile-chrome",
    "test:api": "npx playwright test --config=playwright.config.ts tests/api-health.spec.ts",
    "test:ui": "npx playwright test --config=playwright.config.ts tests/auth.spec.ts tests/navigation.spec.ts tests/audit-logs.spec.ts",
    "report": "npx playwright show-report",
    "install-browsers": "npx playwright install chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0"
  }
}
